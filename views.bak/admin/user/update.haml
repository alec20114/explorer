.row.container
  .large-12.columns
    %h2 Update user
    %form{method: 'POST', action: '/a/users'}
      .row
        .columns.medium-expand.small-12
          %label{for: 'username'} Username 
          %input.disabled{type: 'text', name: 'username-fake', id: 'username', value: user.username, disabled: true}
          %input{type: 'hidden', name: 'username', value: user.username}
        .columns.medium-expand.small-12
          %label{for: 'password'} Password
          %input{type: 'password', name: 'password', id: 'password', placeholder: 'Leave empty if you dont\'t want to change it'}

      .row
        .columns.medium-expand.small-12
          %label{for: 'home'} Home
          %input{type: 'text', name: 'home', id: 'home', placeholder: 'Be careful...', value: user.home}
        .columns.medium-expand.small-12
          %label In read only user won't be able to save archives nor to trash things
          %input{type: 'checkbox', id: 'key', name: 'key', value: 1}
          %label{for: 'key'} Generate new key
          %input{type: 'checkbox', id: 'admin', name: 'admin', value: 1, checked: !!user.admin}
          %label{for: 'admin'} Admin
          %input{type: 'checkbox', id: 'readonly', name: 'readonly', value: 1, checked: !!user.readonly}
          %label{for: 'readonly'} Readonly
      .row
        .columns.medium-expand.small-12
          %label{for: 'trash'}
            Trash
            %small only move mode
          %input{type: 'text', name: 'trash', id: 'trash', value: user.trash, placeholder: config.remove.path}
          %label{for: 'archive'} Archive
          %input{type: 'text', name: 'archive', id: 'archive', value: user.archive, placeholder: config.archive.path}
          %label{for: 'upload'} Upload
          %input{type: 'text', name: 'upload', id: 'upload', value: user.upload, placeholder: config.upload.path}
        .columns.medium-expand.small-12
          %label{for: 'ignore'}
            List of paths to be ignored
            %small one by line
          %textarea{name: 'ignore', id: 'ignore', rows: 5}= user.ignore ? user.ignore.join('\n') : ''

      .row.align-right
        .columns.shrink
          %input{type: 'hidden', name: '_method', value: 'put'}
          %input.button.expanded{type: 'submit', value: 'Update'}

